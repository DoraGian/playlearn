<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget35"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/board" >

    <Button
        android:id="@+id/h2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="434dp"
        android:layout_y="75dp"
        android:background="@drawable/heart" />

    <Button
        android:id="@+id/h3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="470dp"
        android:layout_y="75dp"
        android:background="@drawable/heart" />

    <Button
        android:id="@+id/h1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="395dp"
        android:layout_y="75dp"
        android:background="@drawable/heart" />

    <Button
        android:id="@+id/ok"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="105dp"
        android:layout_height="71dp"
        android:layout_x="233dp"
        android:layout_y="567dp"
        android:background="@layout/butprplay" />

    <TextView
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="322dp"
        android:layout_y="271dp"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/result"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_x="374dp"
        android:layout_y="266dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:textSize="27dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="197dp"
        android:layout_y="271dp"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="145dp"
        android:layout_y="274dp"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="27dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="262dp"
        android:layout_y="271dp"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="27dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/message"
        android:layout_width="446dp"
        android:layout_height="wrap_content"
        android:layout_x="75dp"
        android:layout_y="420dp"
        android:gravity="center"
        android:text="Πληκτρολόγησε το αποτέλεσμα"
        android:textColor="#ffffff"
        android:textSize="27dp"
        android:typeface="sans" />

</AbsoluteLayout>
