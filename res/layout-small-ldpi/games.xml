<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/games"
    android:orientation="vertical" >

    <Button
        android:id="@+id/quiz"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:background="@layout/butquiz" />

    <Button
        android:id="@+id/anagram"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/quiz"
        android:layout_centerHorizontal="true"
        android:background="@layout/butanag" />

    <Button
        android:id="@+id/kremala"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/anagram"
        android:layout_centerHorizontal="true"
        android:background="@layout/butkrem" />

    <Button
        android:id="@+id/prakseis"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kremala"
        android:layout_centerHorizontal="true"
        android:background="@layout/butpraks" />

</RelativeLayout>