<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz" >

        <Button
        android:id="@+id/qscor"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/butscor" />

    <Button
        android:id="@+id/qplay"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_above="@+id/qscor"
        android:layout_alignLeft="@+id/qscor"
        android:layout_marginBottom="74dp"
        android:background="@layout/butplay" />

    <Button
        android:id="@+id/qodigies"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/qscor"
        android:layout_below="@+id/qscor"
        android:layout_marginTop="81dp"
        android:background="@layout/butodigies" />

</RelativeLayout>