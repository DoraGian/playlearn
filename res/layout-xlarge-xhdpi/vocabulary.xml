<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backv"
    android:orientation="vertical" >

    <Button
        android:id="@+id/chapter1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="278dp"
        android:layout_marginTop="307dp"
        android:background="@layout/chapter1" />

    <Button
        android:id="@+id/chapter2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chapter1"
        android:layout_marginRight="278dp"
        android:background="@layout/chapter2" />

    <Button
        android:id="@+id/chapter3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chapter2"
        android:layout_marginRight="278dp"
        android:background="@layout/chapter3" />

    <Button
        android:id="@+id/chapter4"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chapter3"
        android:layout_marginRight="278dp"
        android:background="@layout/chapter4" />

    <Button
        android:id="@+id/chapter5"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chapter4"
        android:layout_marginRight="278dp"
        android:background="@layout/chapter5" />

</RelativeLayout>